// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id        String   @id @default(uuid())
  title     String
  content   String
  status    String   @default("DRAFT") // DRAFT, PUBLISHED, DISCARDED
  sourceUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  
  stripeCustomerId       String?
  stripeSubscriptionId   String?
  subscriptionStatus     String? // active, past_due, canceled, incomplete
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Campaign {
  id              String        @id @default(uuid())
  slug            String        @unique
  persona         String
  intent          String
  seedKeywords    String[]
  benefits        String[]
  proofPoints     String[]
  disclaimers     String[]
  landingSlug     String
  budgetDaily     Float
  targetCpa       Float
  geo             String?
  tone            String?
  status          String        @default("DRAFT") // DRAFT, READY, DEPLOYED, PAUSED, ARCHIVED, ERROR
  
  runs            CampaignRun[]
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model CampaignRun {
  id                      String   @id @default(uuid())
  campaignId              String
  campaign                Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  
  // Artifacts
  chosenKeywords          String[]
  matchTypes              String[]
  negativeKeywords        String[]
  rsaHeadlines            String[]
  rsaDescriptions         String[]
  finalUrl                String?
  landingPageContent      String?  @db.Text
  
  // Metrics History
  metricsHistory          CampaignMetric[]
  
  // Status & Lifecycle
  status                  String   @default("PENDING") // PENDING, VALIDATED, DEPLOYED, PAUSED
  googleAdsResourceIds    Json?    // Store IDs from Google Ads API
  
  // Metrics Snapshot
  metrics                 Json?    // { clicks: 0, cost: 0, conversions: 0, ctr: 0, cvr: 0, cpa: 0 }
  lastMetricsSync         DateTime?

  // Compliance
  complianceCheckResults  Json?    // { status: "PASS" | "FAIL", reasons: [] }
  
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
}

model CampaignMetric {
  id              String       @id @default(uuid())
  campaignRunId   String
  campaignRun     CampaignRun  @relation(fields: [campaignRunId], references: [id], onDelete: Cascade)
  
  date            DateTime     // Daily granularity
  
  impressions     Int          @default(0)
  clicks          Int          @default(0)
  conversions     Int          @default(0)
  cost            Float        @default(0.0)
  
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@unique([campaignRunId, date]) // One entry per run per day
}
